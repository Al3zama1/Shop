<%- include('../includes/header') %>

</head>
<%- include('../includes/navigation') %>

<main>
    <div class="container">
        <div class="row mt-2">
            <div class="col">
                <form action="/admin/add-product" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" <% if (editing === true) {%>
                            value="<%= product.title %>" <% } %>>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" class="form-control" id="description" name="description"
                            <% if (editing === true) {%> value="<%= product.description %>" <% } %>>
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">ImageUrl</label>
                        <input type="text" class="form-control" id="imageUrl" name="imageUrl"
                            <% if (editing === true) {%> value="<%= product.imageUrl %>" <% } %>>
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="text" class="form-control" id="price" name="price" <% if (editing === true) {%>
                            value="<%= product.price %>" <% } %>>
                    </div>
                    <% if (editing === true) {%>
                        <input type="hidden" name="id" value="<%=product.id%>">
                    <% } %>
                    <button type="submit" class="btn btn-primary"><%= editing === true ? 'Update' : 'Save' %></button>
                </form>
            </div>
        </div>
    </div>
</main>

</body>